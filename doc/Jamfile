project doc/leaf ;

import asciidoctor ;

html index.html : leaf.adoc ;

install html_ : index.html : <location>html ;

pdf leaf.pdf : leaf.adoc ;
explicit leaf.pdf ;

install pdf_ : leaf.pdf : <location>pdf ;
explicit pdf_ ;

alias boostdoc ;
explicit boostdoc ;
alias boostrelease : html_ ;
explicit boostrelease ;
